<!DOCTYPE html>
<html>

<head>
  <title> DAB - Adopt Animal</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/styles.css">
  <script src="../js/common.js"></script>

</head>

<body>
  <%- include('./partials/navbar.ejs', {user: user}) %>
    <div class="container-fluid mt-5">
      <h2 class="p-3 text-center">Animals for Adoption - Temperament</h2>
        <div class="list-group">
          <div class="row px-3 py-1 w-100">
            <span class="col py-1 bg-noroff">Id</span>
            <span class="col py-1 bg-noroff">Name</span>
            <span class="col py-1 bg-noroff">Options</span>
          </div>
          <% temperament.forEach(function(temp) { %>
            <div class="row px-3 py-1 w-100">
              <span class="col py-1 bg-light">
                <%=temp.Ids%>
              </span>
              <span class="col py-1 bg-light">
                <%=temp.Name%>
              </span>
              <span class="col py-1 bg-light text-center">
                <form action="/temperament/update-temperament" method="POST">
                  <input type="hidden" name="animalId" value="<%= temp.Ids %>">
                  <input type="text" name="updatedTemp" placeholder="Enter updated temperament">
                  <button class="btn-sm btn-warning" type="submit">Update temperament</button>
                </form>
                <form action="/temperament/delete" method="POST">
                  <input type="hidden" name="temperamentId" value="<%= temp.Ids %>">
                  <button class="btn-sm btn-danger" type="submit">Delete temperament</button>
                </form>
              </span>
            </div>
            <% }); %>
              <hr>
            <div class="row">
              <div class="col-4"></div>
              <div class="col-4 text-center mt-2">
                <form action="/temperament/add" method="POST">
                  <!-- Input field for entering the new temperament name -->
                  <input type="text" name="newTempName" placeholder="Enter new temperament">
                  <!-- Submit button for adding a new temperament -->
                  <button class="btn btn-success" type="submit">Add New Temperament</button>
                </form>
              </div>
              <div class="col-4"></div>
            </div>
      </div>
    </div>
</body>

</html>